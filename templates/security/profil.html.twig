{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Mon profil
{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <style>
        .imgProfile {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
    </style>

    {% if user.imageProfile is not empty %}
        <img class="imgProfile" src="{{ asset('uploads/images/' ~ user.imageProfile) }}" alt="user photo" onerror="this.src='{{ asset('uploads/images/defautProfil.webp') }}';">
    {% else %}
        <img class="imgProfile" src="{{ asset('uploads/images/defautProfil.webp') }}" alt="Image de profil par dÃ©faut">
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn" type="submit">Enregistrer</button>
    <a href="{{ path('home_') }}" class="annuler" style="text-decoration: none">Annuler</a>
    {{ form_end(form) }}
{% endblock %}
